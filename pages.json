{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页",
				"navigationStyle": "custom", //取消默认的原生导航栏
				"app-plus": {
					"bounce": "none", //取消iOS回弹,避免和下拉刷新冲突
					"disableScroll": true, // Android小程序卡顿
					"softinputNavBar": "none" //关闭iOS软键盘上完成工具栏的显示模式
				}
			}
		}, {
			"path": "pages/order/index",
			"style": {
				"navigationBarTitleText": "订单",
				"navigationStyle": "custom", //取消默认的原生导航栏
				"app-plus": {
					"bounce": "none", //取消iOS回弹,避免和下拉刷新冲突
					"disableScroll": true, // Android小程序卡顿
					"softinputNavBar": "none" //关闭iOS软键盘上完成工具栏的显示模式
				}
			}

		}, {
			"path": "pages/placeOrder/index",
			"style": {
				"navigationBarTitleText": "一键下单",
				"navigationStyle": "custom",
				"app-plus": {
					"titleNView": false
				}
			}

		}, {
			"path": "pages/account/index",
			"style": {
				"navigationBarTitleText": " 我的",
				"navigationStyle": "custom",
				"app-plus": {
					"titleNView": false
				}
			}

		}
	],
	"subPackages": [{
		"root": "pages/subPackages",
		"pages": [{
			"path": "company/company",
			"style": {
				"navigationBarTitleText": "公司简介",
				"navigationStyle": "custom",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "login/login",
			"style": {
				"navigationBarTitleText": "登录页",
				"navigationStyle": "custom",
				"enablePullDownRefresh": false
			}

		}]
	}],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#000",
		"selectedColor": "#FFFFFF",
		"borderStyle": "black",
		"backgroundColor": "#6AC039",
		"list": [{
				"pagePath": "pages/index/index",
				"iconPath": "static/tab/t_1.png",
				"selectedIconPath": "static/tab/t_11.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/order/index",
				"iconPath": "static/tab/t_2.png",
				"selectedIconPath": "static/tab/t_22.png",
				"text": "订单"
			},
			{
				"pagePath": "pages/placeOrder/index",
				"iconPath": "static/tab/t_3.png",
				"selectedIconPath": "static/tab/t_33.png",
				"text": "一键下单"
			},
			{
				"pagePath": "pages/account/index",
				"iconPath": "static/tab/t_4.png",
				"selectedIconPath": "static/tab/t_44.png",
				"text": "我的"
			}
		]
	}
}
